<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.update.UpdateLessonActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_register_lesson"
        style="?attr/toolbarWithArrowButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_register_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register_new_lesson"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_register_lesson"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_register_lesson"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_register_lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_name"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_register_lesson_name"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:hint="@string/enter_lesson_name"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_lesson_name" />

            <TextView
                android:id="@+id/tv_register_lesson_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_count"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_register_lesson_name" />

            <EditText
                android:id="@+id/et_register_lesson_count"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:hint="@string/enter_lesson_count"
                android:paddingHorizontal="12dp"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_lesson_count" />

            <TextView
                android:id="@+id/tv_register_lesson_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_category"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_register_lesson_count" />

            <Spinner
                android:id="@+id/spn_register_lesson_category"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:entries="@array/category_array"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_register_lesson_category" />

            <TextView
                android:id="@+id/tv_register_lesson_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_site"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spn_register_lesson_category" />

            <Spinner
                android:id="@+id/spn_register_lesson_site"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:entries="@array/site_array"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_lesson_site" />

            <TextView
                android:id="@+id/tv_register_start_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_start"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spn_register_lesson_site" />

            <TextView
                android:id="@+id/tv_register_start_lesson_date"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/shape_widget_border"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_start_lesson" />

            <TextView
                android:id="@+id/tv_register_end_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_end"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_start_lesson_date" />

            <TextView
                android:id="@+id/tv_register_end_lesson_date"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:textColor="@color/black"
                android:padding="16dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_end_lesson" />

            <TextView
                android:id="@+id/tv_register_lesson_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/lesson_price"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_end_lesson_date" />

            <EditText
                android:id="@+id/et_register_lesson_price"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:layout_marginTop="192dp"
                android:background="@drawable/shape_widget_border"
                android:hint="@string/enter_lesson_price"
                android:inputType="number"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_lesson_price" />

            <TextView
                android:id="@+id/tv_register_lesson_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/message"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_register_lesson_price" />

            <EditText
                android:id="@+id/et_register_lesson_message"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="12dp"
                android:background="@drawable/shape_widget_border"
                android:hint="@string/max_30"
                android:maxLength="30"
                android:paddingHorizontal="12dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_lesson_message" />

            <Button
                android:id="@+id/btn_register_lesson"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                android:text="@string/next"
                android:backgroundTint="@color/gray_300"
                app:layout_constraintTop_toBottomOf="@+id/et_register_lesson_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>